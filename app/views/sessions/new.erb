  <% provide(:title, "Log in") %>
  <h1>Log in</h1>

  <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <%= form_with url: login_path, local: true do |f| %>

       <%= f.label :username %>
       <%= f.text_field :username%>

       <%= f.label :password %>
       <%= f.password_field :password%>

       <%= f.submit "Log in", class: "btn btn-primary" %>
     <% end %>

   </div>
  </div>
